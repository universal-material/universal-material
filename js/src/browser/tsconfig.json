{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "stripInternal": false,
    "moduleResolution": "node"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}