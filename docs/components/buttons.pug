    h5.headline5.article-title Borderless buttons
    .example-box
      .example-box-header
        button.btn-borderless.btn-default
          i.btn-icon.mdi.mdi-heart
        button.btn-borderless.btn-primary
          i.btn-icon.mdi.mdi-heart
        button.btn-borderless.btn-secondary
          i.btn-icon.mdi.mdi-heart
        button.btn-borderless.btn-danger
          i.btn-icon.mdi.mdi-heart
        button.btn-borderless.btn-primary(disabled)
          i.btn-icon.mdi.mdi-heart

