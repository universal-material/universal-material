extends ../layout

block content
  .container
    h4.headline4.chapter-title Buttons

    h5.headline5.article-title Solid buttons

    .example-box
      .example-box-header
        button.btn-solid.btn-default Default
        button.btn-solid.btn-primary Primary
        button.btn-solid.btn-secondary Secondary
        button.btn-solid.btn-danger Danger
        button.btn-solid.btn-primary(disabled) Disabled

      pre
        code.html
          | &lt;button class=&quot;btn-solid btn-default&quot;&gt;Default&lt;/button&gt;
          | &lt;button class=&quot;btn-solid btn-primary&quot;&gt;Primary&lt;/button&gt;
          | &lt;button class=&quot;btn-solid btn-secondary&quot;&gt;Secondary&lt;/button&gt;
          | &lt;button class=&quot;btn-solid btn-danger&quot;&gt;Danger&lt;/button&gt;
          | &lt;button class=&quot;btn-solid btn-primary&quot; disabled=&quot;disabled&quot;&gt;Disabled&lt;/button&gt;

