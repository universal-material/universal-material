doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')

    title Universal Material

    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/atelier-sulphurpool-light.min.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i")
    link(rel="stylesheet" href="https://cdn.materialdesignicons.com/2.7.94/css/materialdesignicons.min.css")
    link(rel="stylesheet" href="/css/universal-material.css")
    link(rel="stylesheet" href="/css/docs.css")

    body
      .u-drawer.u-drawer-lg-dismissible
        aside.u-drawer-content.u-navigation-drawer
          .u-toolbar
            .u-toolbar-row
              .u-toolbar-title Material Design
          nav.u-list.u-list-selectable
            a.u-list-item(href="/")
              .u-list-item-primary-content
                | Introduction

            a.u-list-item(href="/layout/grid.html")
              .u-list-item-primary-content
                span Grid

            a.u-list-item(href="/content/typography.html")
              .u-list-item-primary-content
                span Typography

            a.u-list-item(href="/components/buttons.html")
              .u-list-item-primary-content
                span Buttons

            a.u-list-item(href="/components/floating-action-button.html")
              .u-list-item-primary-content
                span Floating action button

            a.u-list-item(href="/components/cards.html")
              .u-list-item-primary-content
                span Cards

            a.u-list-item(href="/components/chips.html")
              .u-list-item-primary-content
                span Chips

            a.u-list-item(href="/components/data-tables.html")
              .u-list-item-primary-content
                span Data tables

            a.u-list-item(href="/components/dialogs.html")
              .u-list-item-primary-content
                span Dialogs

            a.u-list-item(href="/components/lists.html")
              .u-list-item-primary-content
                span Lists

            a.u-list-item(href="/components/menus.html")
              .u-list-item-primary-content
                span Menus

            a.u-list-item(href="/components/progress.html")
              .u-list-item-primary-content
                span Progress

            a.u-list-item(href="/components/selection-controls.html")
              .u-list-item-primary-content
                span Selection controls

            a.u-list-item(href="/components/sliders.html")
              .u-list-item-primary-content
                span Sliders

            a.u-list-item(href="/components/snackbars.html")
              .u-list-item-primary-content
                span Snackbars

            a.u-list-item(href="/components/tabs.html")
              .u-list-item-primary-content
                span Tabs

            a.u-list-item(href="/components/text-fields.html")
              .u-list-item-primary-content
                span Text fields

            a.u-list-item(href="/components/toolbars.html")
              .u-list-item-primary-content
                span Toolbars

        .u-drawer-backdrop.d-lg-none
        .u-toolbar.u-toolbar-primary.u-toolbar-fixed#app-bar
          .u-toolbar-row
            .u-toolbar-start
              .u-toolbar-navigation.u-btn-borderless.u-btn-default#menu-toggle
                i.u-btn-icon.mdi.mdi-menu

            .u-toolbar-title
              | Material
            .u-toolbar-end
              .u-toolbar-actions
                a.u-toolbar-action.u-btn-borderless.u-btn-default(href="/angular", title="Universal Material Angular")
                  i.u-btn-icon.mdi.mdi-angular
                button.u-toolbar-action.u-btn-borderless.u-btn-default#rtl-toggle(type="button", title="Rtl")
                  i.u-btn-icon.mdi.mdi-format-align-right
                button.u-toolbar-action.u-btn-borderless.u-btn-default#dense-toggle(type="button", title="Dense layout")
                  i.u-btn-icon.mdi.mdi-format-size

        .u-container.u-margin-lg-40.chapter#main-content
          block content

    script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js')
    script(src="/js/universal-material.js")
    script(src="/js/docs.js")
    block scripts
