    body.sidebar-layout
      nav.sidebar.sidebar-left.sidebar-lg-fixed
        .toolbar
          .toolbar-row
            .toolbar-title Material Design
        .list.list-hover
          a.list-item(href="/")
            .list-item-icon
              i.mdi.mdi-home
            .list-item-primary-content
              | Introduction

          a.list-item(href="/layout/grid.html")
            .list-item-icon
              i.mdi.mdi-view-grid
            .list-item-primary-content
              span Grid

          a.list-item(href="/content/typography.html")
            .list-item-icon
              i.mdi.mdi-page-layout-header
            .list-item-primary-content
              span Typography

          a.list-item(href="/components/buttons.html")
            .list-item-icon
              i.mdi.mdi-arrow-right
            .list-item-primary-content
              span Buttons

          a.list-item(href="/components/cards.html")
            .list-item-icon
              i.mdi.mdi-page-layout-body
            .list-item-primary-content
              span Cards

          a.list-item(href="/components/chips.html")
            .list-item-icon
              i.mdi.mdi-label
            .list-item-primary-content
              span Chips

          a.list-item(href="/components/data-tables.html")
            .list-item-icon
              i.mdi.mdi-table
            .list-item-primary-content
              span Data tables

          a.list-item(href="/components/dialogs.html")
            .list-item-icon
              i.mdi.mdi-window-maximize
            .list-item-primary-content
              span Dialogs

          a.list-item(href="/components/lists.html")
            .list-item-icon
              i.mdi.mdi-format-list-bulleted
            .list-item-primary-content
              span Lists

          a.list-item(href="/components/menus.html")
            .list-item-icon
              i.mdi.mdi-menu
            .list-item-primary-content
              span Menus

          a.list-item(href="/components/progress.html")
            .list-item-icon
              i.mdi.mdi-loading
            .list-item-primary-content
              span Progress

          a.list-item(href="/components/selection-controls.html")
            .list-item-icon
              i.mdi.mdi-toggle-switch
            .list-item-primary-content
              span Selection controls

          a.list-item(href="/components/snackbars.html")
            .list-item-icon
              i.mdi.mdi-page-layout-footer
            .list-item-primary-content
