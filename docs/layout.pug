            .list-item-primary-content
              span Text fields

          a.list-item(href="/components/toolbars.html")
            .list-item-icon
              i.mdi.mdi-page-layout-header
            .list-item-primary-content
              span Toolbars

      .sidebar-backdrop
      .layout-content.toolbar-layout
        .toolbar.toolbar-primary#app-bar
          .toolbar-row
            .toolbar-navigation.btn-borderless.btn-default.d-lg-none#menu-toggle
              i.mdi.mdi-menu

            .toolbar-title
              | Material
            .toolbar-actions
              button.toolbar-action.btn-borderless.btn-default#dense-toggle(type="button", title="Dense layout")
                i.mdi.mdi-format-size
        .layout-content#main-content
          .container.margin-lg-40.chapter
            block content

